@page "/admin"
@inject NavigationManager _nav
@inject PageHistory _page
@inject UserGlobal _user

@if (_user.IsAdmin)
{
    <PageTitle>CC - Admin Panel</PageTitle>

    <PageBase>
        <h1>Admin Panel</h1>
        This is where all users, ingredients and recipes can be managed.<br /><br />

        <div class="grid gap-3">
            <MenuItem IsAdmin=true Icon="fas fa-user" Title="Manage Users" Href="admin"></MenuItem>
            <MenuItem IsAdmin=true Icon="fas fa-carrot" Title="Manage Ingredients" Href="admin/ingredients"></MenuItem>
            <MenuItem IsAdmin=true Icon="fas fa-burger" Title="Manage Recipes" Href="admin/recipes"></MenuItem>
            <MenuItem IsAdmin=true Icon="fas fa-file-signature" Title="View Logs" Href="admin/log_entries"></MenuItem>
        </div>
        <ButtonContainer>
            <BackButtonControl OnClickCall="PageBack" />
        </ButtonContainer>
    </PageBase>
}



@code {
    private void PageBack()
    {
        if (_page.IsPrevious())
        {
            _nav.NavigateTo(_page.GetPreviousPage());
        }
    }
}
