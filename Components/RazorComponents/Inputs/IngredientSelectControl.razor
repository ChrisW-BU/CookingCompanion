@inject CookCompAPI _api
@inherits SelectControlBase
<div>
    <label>@Name</label><br />
    <select class="form-select @CssClass" @onchange="OnChange"
            hidden="@IsHidden" disabled="@IsDisabled">
        @foreach (Ingredient i in ingList)
        {
            <SelectControlOption Value="@i.Id" Name="@i.Name" />
        }
    </select>
</div>

@code {
    [Parameter]
    public List<Ingredient> ingList { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ingList = await _api.GetIngredientListAsync(10, 0);
        await base.OnInitializedAsync();
    }

    [Parameter]
    public RenderFragment ShowId { get; set; }

    public void OnChange()
    {
        Console.WriteLine("The current value is: " + Value);
    }
}
