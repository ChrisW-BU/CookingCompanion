<i class="col-@ColSize @ClassStr" title="@TitleStr"></i>

@code {
    [Parameter]
    public bool IsVege { get; set; }

    [Parameter]
    public string ColSize { get; set; } = string.Empty;

    public string TitleStr
    {
        get
        {
            if(IsVege)
            {
                return "This recipe is vegetarian.";
            }
            else
            {
                return "This recipe is not vegetarian.";
            }
        }
    }

    public string ClassStr
    {
        get
        {
            if (IsVege)
            {
                return "fas fa-leaf text-success";
            }
            else
            {
                return "fas fa-leaf text-secondary";
            }
        }
    }
}
