@inject NavigationManager NavManager
@inject PageHistory _page

<div @onclick="OnClickEvent" style="height: 80px;" class="text-truncate w-menu-item p-3 me-3 mb-3 col-md-3 text-center fs-3 rounded-3 user-select-none">
        <span class="@Icon">

        </span>
        <span>
            @Title
        </span>
</div>

@code {
    [Parameter]
    public bool IsAdmin { get; set; }

    [Parameter]
    public string Icon { get; set; } = string.Empty;

    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string Href { get; set; } = string.Empty;

    private void OnClickEvent()
    {
        NavManager.NavigateTo(Href);
        if (IsAdmin)
        {
            _page.AddPage("admin");
        }
        else
        {
            _page.AddPage("");
        }
    }
}